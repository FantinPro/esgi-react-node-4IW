{
    "env": {
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base",
        "plugin:jest/recommended",
        "plugin:security/recommended"
    ],
    "plugins": [
        "jest",
        "security"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "no-console": "off",
        "func-names": "off",
        "no-underscore-dangle": "off",
        "consistent-return": "off",
        "jest/expect-expect": "off",
        "security/detect-object-injection": "off",
        "indent": [
            "error",
            4
        ],
        "no-unused-vars": "warn",
        "max-len": [
            "error",
            {
                "code": 160
            }
        ]
    }
}